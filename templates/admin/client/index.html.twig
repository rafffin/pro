                <td>{{ client.email }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.civilite }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.codePostal }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.commande |length }}</td>
  
                <td>
                    <a href="{{ path('app_admin_client_show', {'id': client.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('app_admin_client_edit', {'id': client.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_client_new') }}">Create new</a>
